.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 520rpx;
  position: fixed;
  top: 11%;
  left: 16.5%;
  z-index: 1001;
  background: #fd0;
  border-radius: 16rpx;
  padding-bottom: 44rpx;
}

.drawer_title {
  padding: 0 30rpx 30rpx 30rpx;
  position: relative;
  height: 60rpx;
}

.drawer_title>view:nth-of-type(1) {
  position: absolute;
  left: -5rpx;
}

.drawer_content {
  padding: 0 40rpx;
  height: 100%;
}
