<view class="receivingAddressView">
  <view class="itemView font_size24" >用户名    
    <input style="margin-left: 52rpx;" type="text" value="{{userName}}"  class="input" name="userName" placeholder="请输入用户名" bindinput="userNameInput" />
  </view>
    <view class="itemView font_size24" >手机号码    
    <input class="input" name="phoneNumber" type="number" value="{{phoneNumber}}" placeholder="11位手机号" maxlength="11" bindinput="phoneNumberInput" />
  </view>
  <view class="itemView font_size24" >收货地区    
    <input class="input"  name="selectionArea" value="{{selectionArea}}" placeholder="请输入地址" bindinput="selectionAreaInput" />
  </view>
  <view class="itemView font_size24" >详细地址    
    <input class="input" name="detailedAddress" value="{{address}}" type="text" placeholder="街道门牌信息" bindinput="detailedAddressInput" />
  </view>
  <view class="itemView font_size24" >邮政编码    
    <input class="input" name="youZengCode" value="{{youZengCode}}" value="{{youZengCode}}" type="number" maxlength="6" placeholder="邮政编码" bindinput="youZengCodeInput" />
  </view>
  <view class="itemViews">
    <center-btn btnConfig="center_BtnOkMoreChange" widths="500" centerBtnText="获取微信地址" bindconfirmpay="get_authorization"></center-btn>
  </view>
  <view class="share-btn">
    <center-btn btnConfig="set_AddScatter"  widths="500" centerBtnText="确认地址" bindconfirmpay="confirmpay"></center-btn>
  </view>
</view>